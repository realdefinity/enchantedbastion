  <script>
    // Enhanced Preloader with Resource Loading Check
    document.addEventListener('DOMContentLoaded', function() {
      const preloader = document.querySelector('.preloader');
      const progressBar = document.querySelector('.preloader-progress-bar');
      
      // First check DOM readiness
      let domReady = false;
      let resourcesReady = false;
      
      // Check when DOM is fully loaded
      document.addEventListener('readystatechange', () => {
        if (document.readyState === 'complete') {
          domReady = true;
          checkLoadStatus();
        }
      });
      
      // Check when all resources are loaded
      window.addEventListener('load', () => {
        resourcesReady = true;
        checkLoadStatus();
      });
      
      function checkLoadStatus() {
        if (domReady && resourcesReady) {
          completeLoading();
        } else {
          simulateProgress();
        }
      }
      
      function simulateProgress() {
        let progress = 0;
        const interval = setInterval(() => {
          progress += Math.random() * 10;
          progressBar.style.width = `${Math.min(progress, 90)}%`;
          
          if (progress >= 90) {
            clearInterval(interval);
          }
        }, 100);
      }
      
      function completeLoading() {
        progressBar.style.width = '100%';
        setTimeout(() => {
          preloader.classList.add('fade-out');
          
          // Start animations after preloader hides
          setTimeout(() => {
            document.querySelectorAll('.section-header, .function-card, .marketing-summary').forEach(el => {
              el.classList.add('visible');
            });
          }, 100);
        }, 500);
      }
      
      // Fallback in case something goes wrong
      setTimeout(() => {
        if (!preloader.classList.contains('fade-out')) {
          completeLoading();
        }
      }, 5000);
    });

    // Premium Gold Ring Cursor
    function initGoldCursor() {
      const cursor = document.querySelector('.gold-cursor');
      if (!cursor) return;
      
      let mouseX = 0;
      let mouseY = 0;
      let cursorX = 0;
      let cursorY = 0;
      const speed = 0.15;
      
      // Smooth cursor movement with RAF
      const animateCursor = () => {
        const dx = mouseX - cursorX;
        const dy = mouseY - cursorY;
        
        cursorX += dx * speed;
        cursorY += dy * speed;
        
        cursor.style.transform = `translate(${cursorX}px, ${cursorY}px)`;
        requestAnimationFrame(animateCursor);
      };
      
      document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
      });
      
      animateCursor();
      
      const hoverElements = document.querySelectorAll('a, button, .luxury-scroll-hint, .department-card');
      hoverElements.forEach(el => {
        el.addEventListener('mouseenter', () => {
          cursor.classList.add('cursor-hover');
        });
        el.addEventListener('mouseleave', () => {
          cursor.classList.remove('cursor-hover');
        });
      });
      
      document.body.addEventListener('mouseout', (e) => {
        const target = e.target.closest('a, button, .function-card, .channel-item, .summary-item, .luxury-scroll-hint');
        if (target && !e.relatedTarget?.closest('a, button, .function-card, .channel-item, .summary-item, .luxury-scroll-hint')) {
          cursor.classList.remove('cursor-hover');
        }
      });
      
      // Click effects
      document.addEventListener('mousedown', () => {
        cursor.classList.add('cursor-active');
      });
      
      document.addEventListener('mouseup', () => {
        cursor.classList.remove('cursor-active');
      });
    }
    
    // Gold Dust Effect
    function initGoldDust() {
      const container = document.getElementById('goldDust');
      if (!container) return;
      
      const dustCount = Math.min(Math.floor(window.innerWidth / 25), 50);
      
      for (let i = 0; i < dustCount; i++) {
        const dust = document.createElement('div');
        dust.classList.add('dust-particle');
        
        // Random properties with constraints
        const size = Math.random() * 4 + 1;
        const posX = Math.random() * window.innerWidth;
        const duration = Math.random() * 15 + 10;
        const delay = Math.random() * 5;
        const opacity = Math.random() * 0.3 + 0.1;
        
        dust.style.cssText = `
          width: ${size}px;
          height: ${size}px;
          left: ${posX}px;
          animation: float-dust ${duration}s linear ${delay}s infinite;
          opacity: ${opacity};
        `;
        
        container.appendChild(dust);
      }
    }
    
    // 3D Tilt Effect for Hero Image
    function init3DTiltEffect() {
      const heroWrapper = document.getElementById('heroImageWrapper');
      if (!heroWrapper) return;
      
      const inner = heroWrapper.querySelector('.hero-image-inner');
      
      heroWrapper.addEventListener('mousemove', (e) => {
        const rect = heroWrapper.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        const angleX = (y - centerY) / 20;
        const angleY = (centerX - x) / 20;
        
        inner.style.transform = `rotateX(${angleX}deg) rotateY(${angleY}deg)`;
        
        // Parallax effect for the image
        const moveX = (x - centerX) / 30;
        const moveY = (y - centerY) / 30;
        
        heroWrapper.querySelector('.luxury-hero-image').style.transform = `scale(1.05) translate(${moveX}px, ${moveY}px)`;
        
        // Enhanced shadow effect
        const shadowX = (x - centerX) / 20;
        const shadowY = (y - centerY) / 20;
        const shadowBlur = 40 + Math.abs(shadowX) + Math.abs(shadowY);
        
        heroWrapper.style.boxShadow = `${shadowX}px ${shadowY}px ${shadowBlur}px rgba(0, 0, 0, 0.6)`;
      });
      
      heroWrapper.addEventListener('mouseleave', () => {
        inner.style.transform = 'rotateX(0) rotateY(0)';
        heroWrapper.querySelector('.luxury-hero-image').style.transform = 'scale(1.05)';
        heroWrapper.style.boxShadow = '0 40px 80px rgba(0, 0, 0, 0.8)';
      });
    }
    
    function initScrollAnimations() {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            
            // Special handling for promotion cards
            if (entry.target.classList.contains('promo-card')) {
              const section = entry.target.closest('.section');
              if (section && section.id === 'promotions') {
                const cards = section.querySelectorAll('.promo-card');
                cards.forEach((card, index) => {
                  card.style.transitionDelay = `${index * 0.2}s`;
                });
              }
            }
            
            observer.unobserve(entry.target);
          }
        });
      }, { 
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
      });
    
      // Observe both sections and individual cards
      document.querySelectorAll('.section-header, .department-card, .employee-summary, .promo-card').forEach(el => {
        observer.observe(el);
      });
    }
    
    // Smooth scrolling for navigation
    function initSmoothScrolling() {
      const scrollHint = document.querySelector('.luxury-scroll-hint');
      if (scrollHint) {
        scrollHint.addEventListener('click', () => {
          document.querySelector('.staff-section')?.scrollIntoView({
            behavior: 'smooth'
          });
        });
      }
    }
    
    function initInstagramInteractions() {
      const likeButton = document.querySelector('.like-button');
      if (!likeButton) return;
      
      const likeCount = document.querySelector('.like-count');
      const commentButton = document.querySelector('.comment-button');
      const viewComments = document.querySelector('.view-comments');
      const addComment = document.querySelector('.add-comment');
      const postComment = document.querySelector('.post-comment');
      const commentInput = document.querySelector('.comment-input');
      const commentCount = document.querySelector('.comment-count');
      
      let liked = false;
      let commentsVisible = false;
      let commentCountValue = 428;
      
      // Like button functionality
      likeButton.addEventListener('click', function() {
        if (!liked) {
          let currentCount = likeCount.textContent;
          let isK = currentCount.includes('k');
          let numericValue = parseFloat(currentCount.replace('k', ''));
          
          if (isK) {
            numericValue += 0.1;
            likeCount.textContent = numericValue.toFixed(1) + 'k';
          } else {
            numericValue += 1;
            likeCount.textContent = numericValue;
          }
          
          this.querySelector('.heart-icon').textContent = '‚ù§Ô∏è';
          liked = true;
        } else {
          this.querySelector('.heart-icon').textContent = '‚ô°';
          liked = false;
        }
        
        this.classList.add('liked');
        setTimeout(() => {
          this.classList.remove('liked');
        }, 500);
      });
      
      // Comment button functionality
      if (commentButton) {
        commentButton.addEventListener('click', function() {
          if (!commentsVisible && viewComments) {
            viewComments.click();
          }
        });
      }
    
      // View comments functionality
      if (viewComments) {
        viewComments.addEventListener('click', function(e) {
          e.preventDefault();
          commentsVisible = !commentsVisible;
          if (addComment) {
            addComment.style.display = commentsVisible ? 'block' : 'none';
            if (commentsVisible && commentInput) {
              commentInput.focus();
            }
          }
        });
      }
    
      // Post comment functionality
      if (postComment && commentInput) {
        postComment.addEventListener('click', function(e) {
          e.preventDefault();
          if (commentInput.value.trim() !== '') {
            commentCountValue++;
            if (commentCount) {
              commentCount.textContent = commentCountValue;
            }
            commentInput.value = '';
            if (addComment) {
              addComment.style.display = 'none';
            }
            commentsVisible = false;
          }
        });
    
        // Press enter to post comment
        commentInput.addEventListener('keypress', function(e) {
          if (e.key === 'Enter') {
            postComment.click();
          }
        });
      }
    }
    
    // Initialize everything when DOM loads
    window.addEventListener('load', () => {
      initGoldCursor();
      initGoldDust();
      init3DTiltEffect();
      initScrollAnimations();
      initSmoothScrolling();
      initInstagramInteractions();

      // Preload critical images
      const heroImg = new Image();
      const heroImageElement = document.querySelector('.luxury-hero-image');
      if (heroImageElement) {
        heroImg.src = heroImageElement.src;
      }
    });
  </script>
</body>
</html>
